<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />
	<link rel="stylesheet" href="../public/stylesheets/style.css">

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->

	<%- include("./partials/header")  %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Novedades -->
	<section class="productos">

		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i=0; i < listaProductos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<div class="producto">

						<a href="/products/id/3">
							<figure class="product-box_image">
								<img src="<%= listaProductos[i].imagen %>" alt="<%= listaProductos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= listaProductos[i].nombre %></h2>
								<p><%= listaProductos[i].descripcion %></p>
								<p><%= listaProductos[i].comentarios[0].textoComentario %></p>
								<p> Cantidad de comentarios: <%= listaProductos[i].comentarios.length %></p>
							</article>
						</a>
					</div>
				</div>
				<%} %>

		</div>
	</section>


	<%- include("./partials/footer") %>
</body>

</html>