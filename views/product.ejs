<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logoPerfumeria.png" />

	<title>L'Essence</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	<!-- Header -->
	<% if (locals.user ) {%>
		<%- include("./partials/headerLogueado", {usuario: locals.user})  %>
	<% }else {%>
		<%- include("./partials/header")  %>
	<%}%>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= data.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/products/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= data.imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= data.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i=0; i < data.comentarios.length; i++) { %>
							<article>
								<img src="<%= data.comentarios[i].usuario.imagenPerfil %>" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile/ <%= data.comentarios[i].usuario.id %>">
									<!--usuario es el alias del modelo en la relacion-->
										<%= data.comentarios[i].usuario.usuario %>
									</a>
									</strong>
									<p><%= data.comentarios[i].textoComentario %> </p>
									</p>
								</div>
							</article>
							<%} %>
						
					

					</section>
					
						
						<form class="form" action="/products/id/<%=data.id%>" method="POST"> 
						<input class="form-input" type="text" name= "texto" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						
					</form>
					
					
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->

</body>	
</html>