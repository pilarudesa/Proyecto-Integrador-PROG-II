<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logoPerfumeria.png" />

	<title> L'Essence </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->
	<% if (locals.user ) {%>
		<%- include("./partials/headerLogueado", {usuario: locals.user})  %>
	<% }else {%>
		<%- include("./partials/header")  %>
	<%}%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de busqueda</h2>
			</div>
			<!-- Muestra lo que busco en el buscador -->
			<h2 class="col-12"> 
			<div class="productos">
				<div class="col-12 col-sm-6 col-lg-3">
					<% if (productos.length === 0) { %>
						<p>No hay resultados para su criterio de b√∫squeda</p>
					<% } else { %>
						<ul>
							<% productos.forEach(producto => { %>
								<li>
									<a href="/products/id/<%= producto.id %>" class="product-box_image">
										<img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
										<h2><%= producto.nombre %></h2>
									</a>
									<p>
										Cargado por:
										<a href="/users/profile/<%= producto.usuario.id %>">
											<%= producto.usuario.usuario %>
										</a>
									</p>

								</li>
								<% }) %>
						</ul>
					<% } %>
					</div>	
				</div>	
	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>