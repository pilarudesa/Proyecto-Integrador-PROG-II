<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logoPerfumeria.png" />

	<title>L'Essence</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->
	<% if (locals.user ) {%>
		<%- include("./partials/headerLogueado", {usuario: locals.user})  %>
	<% }else {%>
		<%- include("./partials/header")  %>
	<%}%>
		<!-- /Header -->

		<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="<%= data.imagenPerfil %>" alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title">
							<%= data.usuario %>
								
									<a href="#">
										<i class="fas fa-cog"></i>
									</a>
						</h1>
						<p>
							<%= data.email %>
						</p>
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</div>
					<div>
						<ul class="">
							<li> Productos: <%= data.productos.length %></li>
							<li> Comentarios: <%= data.comentarios.length %></li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- /Datos del usuario -->

		<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for (let i=0; i < data.productos.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/id/<%=data.productos[i].id%>">
								<figure class="product-box_image">
									<img src="<%= data.productos[i].imagen %>" alt="<%= data.productos[i].nombre %>">
								</figure>
								<article class="product-box_data">
									<h2 class="products-title">
										<%= data.productos[i].nombre %>
									</h2>
									<p>

									</p>
									<p class="comentarios-box">
										Cantidad de comentarios: <%= data.productos[i].comentarios.length %>
									</p>
								</article>
							</a>
						</section>
					</div>
					<%} %>
			</div>
		</div>
		</div>
		<!-- /Mis productos -->


		<!-- footer -->
		<%- include("./partials/footer") %>
			<!-- /footer -->
</body>

</html>